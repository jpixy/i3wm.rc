# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
# order += "load"
order += "run_watch DHCP"
order += "run_watch VPN"
# order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "volume master"
order += "battery all"
# order += "load"
order += "tztime local"
# order += "ipv6"

cpu_usage {
        format = " CPU  %usage "
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
	
}

disk "/" {
        # format = " hdd %avail "
        format = " DISK %avail "
}

wireless _first_ {
	format_up = " wifi: (%quality at %essid, %bitrate) %ip "
  	format_down = " no wifi "
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip (%speed) "
        format_down = " no lan "
}

volume master {
       format = "%volume vol "
       format_muted = "vol muted "
       device = "default"
       mixer = "Master"
       mixer_idx = 0
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage %remaining"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        # status_chr = "⚡"
	status_chr = "Charging "
        # status_bat = "bat"
        # status_bat = "☉"
        # status_bat = ""
	status_bat = "Battery "
        # status_unk = "?"
        status_unk = "Unknow "
        # status_full = ""
        # status_full = "☻"
	status_full = "Full"
        low_threshold = 15
        threshold_type = time
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %d.%m.%Y %H:%M:%S "
}
